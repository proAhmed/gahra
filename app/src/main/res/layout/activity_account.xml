<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.gahra.ahmed.gahra.account.Account">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.gahra.ahmed.gahra.account.Account">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#414042"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text="CANCEL"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/button_red"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:text="Busniess Account"/>

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:civ_border_color="#fff"
            app:civ_border_width="4dp"
            android:padding="3dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/profile"/>

<Button
    android:id="@+id/imgChangeLogo"
    android:layout_width="wrap_content"
    android:layout_height="35dp"
    android:layout_gravity="center"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:textColor="#fff"
    android:textSize="16sp"
    android:text="Change Logo"
    android:background="@drawable/button_red"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
       android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#404042"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Company Name"/>

        <EditText
            android:id="@+id/edCompanyName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/edittext_red"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#404042"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Personal Name"/>

            <EditText
                android:id="@+id/edPersonalName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittext_red"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#404042"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Category"/>

            <EditText
                android:id="@+id/edCategory"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bar"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#404042"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Sub-Category"/>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edSubCategory"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bar"
                android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        >

    </LinearLayout>
        </RelativeLayout>
        </LinearLayout>

    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#404042"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="Information"/>

            <EditText
                android:id="@+id/edInformation"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:background="@drawable/edittext_red"
                android:layout_marginTop="10dp"/>

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#404042"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Mobile Number"/>

            <EditText
                android:id="@+id/edMobile"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittext_red"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#404042"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Tele. Number"/>

            <EditText
                android:id="@+id/edTel"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edittext_red"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#404042"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Email"/>

        <EditText
            android:id="@+id/edEmail"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/edittext_red"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#404042"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Website"/>

        <EditText
            android:id="@+id/edWeb"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/edittext_red"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:text="Create"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_red"
        android:layout_marginBottom="15dp"
        android:textColor="#fff"
        android:textSize="18sp"/>
</LinearLayout>
</ScrollView>
