<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bc"
    android:orientation="vertical"
    tools:context="com.gahra.ahmed.gahra.start.BusniessAccount">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#fff">
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/busniessImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/login_title"
        android:layout_marginLeft="15dp"
        android:elevation="4dp"
        android:src="@drawable/profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#D1161D"
            android:textSize="20sp"
            android:text="Adidas"/>

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="edit info"
            android:textColor="#fff"
            android:background="@drawable/button_gray"/>

    </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:background="#D2D3D5"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvNumFollowers"
        android:layout_width="wrap_content"
        android:textColor="#414042"
        android:textSize="24sp"
        android:text="500"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Followers"
        android:textSize="20sp"
        android:textColor="#414143"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="4dp"/>

</LinearLayout>
        <LinearLayout
            android:layout_width="1.5dp"
            android:background="#414143"
            android:orientation="vertical"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#D2D3D5"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvNumLatest"
                android:layout_width="wrap_content"
                android:textColor="#414042"
                android:textSize="24sp"
                android:text="20"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latest"
                android:textSize="20sp"
                android:textColor="#414143"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="1.5dp"
            android:background="#414143"
            android:orientation="vertical"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="#D2D3D5"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvNumFeatured"
                android:layout_width="wrap_content"
                android:textColor="#414042"
                android:textSize="24sp"
                android:text="10"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Featured"
                android:textSize="20sp"
                android:textColor="#414143"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/reBusniess"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
